@model List<string>
@{
    string logoPath;
}

<style>
    body {
        background-color: #1e1e1e;
        color: #f0f0f0;
        font-family: sans-serif;
    }

    .profile-banner img {
        width: 100%;
        max-height: 300px;
        object-fit: cover;
        border-radius: 8px;
    }

    .profile-title {
        font-size: 2.5rem;
        margin: 20px 0;
    }

    .game-link {
        text-decoration: none;
        color: inherit;
    }

    .game-card {
        background-color: #2a2a2a;
        border: 1px solid #3a3a3a;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .game-card:hover {
        transform: scale(1.02);
        cursor: pointer;
    }

    .game-card img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .game-card .card-body {
        padding: 10px;
        text-align: center;
        flex-grow: 1;
    }
</style>

<div class="container mt-4">
    <!-- Баннер -->
    <div class="profile-banner mb-4">
        <img src="/images/profile.png" alt="Баннер профиля" />
    </div>

    <!-- Имя профиля -->
    <div class="text-center profile-title">
        Имя профиля
    </div>

    <!-- Сетка карточек -->
    @for (int i = 0; i < Model.Count; i += 4)
    {
        <div class="row g-4 mb-4">
            @for (int j = i; j < i + 4 && j < Model.Count; j++)
            {
                var imageName = Model[j];
                var gameId = j;
                
                
                <div class="col-md-3 col-sm-6">
                    <a class="game-link" asp-controller="Game" asp-action="Index" asp-route-id="@gameId">
                        <div class="game-card">
                            <img src=@Url.Content($"~/games/{gameId}/Images/logo.png") alt="Game @gameId" />
                            <div class="card-body">
                                <h5 class="card-title">Игра @gameId</h5>
                            </div>
                        </div>
                    </a>

                </div>
            }
        </div>
    }
</div>
